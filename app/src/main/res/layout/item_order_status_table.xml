<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignTop="@id/btnSelectOrderPrepare"
    android:layout_alignBottom="@id/btnSelectOrderPrepare"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/shape_rounded_border"
    android:layout_marginBottom="24dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_inactive_order"
        android:tint="@color/green_primary"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2. Status"
        android:textColor="@color/green_secondary"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
