<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.order.online.EditOnlineOrderFragment"
    android:background="@color/green_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/editOnlineOrderRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_order_prepare"
            android:layout_margin="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/ic_plus"
                android:scaleType="fitCenter"
                android:background="@drawable/button_secondary_container_solid"
                android:tint="@color/green_primary"
                android:elevation="20dp"
                android:padding="10dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/ic_local_shipping"
                android:scaleType="fitCenter"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/green_primary"
                android:background="@drawable/button_secondary_container_solid"
                android:padding="10dp"
                android:elevation="20dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/ic_check_fill"
                android:scaleType="fitCenter"
                android:background="@drawable/button_secondary_container_solid"
                android:padding="10dp"
                android:tint="@color/green_primary"
                android:elevation="20dp"/>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>