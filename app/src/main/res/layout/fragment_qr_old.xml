<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.qr.QrOldFragment"
    android:background="@color/green_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:layout_margin="8dp"/>

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/button_secondary_container_solid"
                    android:padding="10dp"
                    android:elevation="20dp"
                    app:tint="@color/green_primary" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:text="QR code Text (Required)"
                android:textStyle="bold"
                android:textColor="@color/green_primary"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputQrText"
                android:layout_width="match_parent"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_height="64dp"
                android:background="@drawable/shape_rounded_border"
                android:textColor="@color/green_secondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:text="Scan Image QR"
                    android:textColor="@color/green_primary"
                    android:background="@drawable/button_secondary_container_solid"
                    android:padding="10dp"
                    android:elevation="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="14dp"
                    android:text="Upload Image QR"
                    android:textColor="@color/green_primary"
                    android:background="@drawable/button_secondary_container_solid"
                    android:padding="10dp"
                    android:elevation="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginBottom="14dp"
                    android:text="Cofirm the code"
                    android:textColor="@color/green_primary"
                    android:background="@drawable/button_secondary_container_solid"
                    android:padding="10dp"
                    android:elevation="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:text="Back"
                    android:textColor="@color/green_primary"
                    android:background="@drawable/button_secondary_container_solid"
                    android:padding="10dp"
                    android:elevation="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>