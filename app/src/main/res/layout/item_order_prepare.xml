<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:background="@drawable/shape_rounded_border">

    <RelativeLayout
        android:id="@+id/statusCheckBtnOrderPrepare"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/green_secondary_container"
        android:layout_margin="3dp">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/btnSelectOrderPrepare"
            android:button="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_alignTop="@id/btnSelectOrderPrepare"
            android:layout_alignBottom="@id/btnSelectOrderPrepare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icOrderPrepare"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_inactive_order"/>

            <TextView
                android:id="@+id/nameOrderPrepare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2. none select"
                android:textColor="@color/green_secondary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnConfigOrderPrepare"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_build"
        android:background="@color/green_on_primary"
        android:scaleType="fitCenter"
        android:layout_margin="4dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnTrashOrderPrepare"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@color/green_error_container"
        android:src="@drawable/ic_trash"
        android:scaleType="fitCenter"
        android:layout_margin="4dp" />

</LinearLayout>