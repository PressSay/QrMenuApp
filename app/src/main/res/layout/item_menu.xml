<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/galleryLayout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_impression_rounded_border">

        <LinearLayout
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_impression_rounded"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/itemMenuPlusBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_impression_plus"
                android:padding="15dp"
                android:elevation="30dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/itemMenuMinusBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_impression_minus"
                android:padding="15dp"
                android:elevation="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_alignTop="@id/btnMenu"
            android:layout_alignBottom="@id/btnMenu"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_menu_img"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:background="@drawable/shape_impression_rounded_border"
                    android:contentDescription="shape_image"
                    android:src="@drawable/img_image_6"
                    android:scaleType="fitXY"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/item_menu_cost"
                        android:layout_width="70dp"
                        android:layout_height="18dp"
                        android:background="@drawable/shape_normal_rounded"
                        android:backgroundTint="@color/green_primary"
                        android:text="18,000 $"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="123dp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="126dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/item_menu_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="Orange Juice"
                                    android:textColor="#3C691B"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="start">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Description:"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/green_secondary"/>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_plus" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_menu_description"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="something something something something something something something something something something something"
                        android:textSize="15sp"
                        android:textColor="@color/green_secondary"
                        android:textStyle="italic"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="126dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_menu_amount"
                            android:layout_width="44dp"
                            android:layout_height="18dp"
                            android:background="@drawable/shape_normal_rounded"
                            android:backgroundTint="@color/green_primary"
                            android:gravity="center"
                            android:text="012"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/itemMenuIconMinus"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_remove" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>


